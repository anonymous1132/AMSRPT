<!-- For this Project Only -->
<link href="~/themes/local/shl.css" rel="stylesheet">

<!-- Dual Listbox -->
<script src="~/Scripts/plugins/dualListbox/jquery.bootstrap-duallistbox.js"></script>
<script src="~/Scripts/ams.commontool.js"></script>
