        <p style="text-align:center">LotID: <input id="lotid" type="text"></p>
        <div style="padding:10px;text-align:center;">
            <style>
                .easyui-linkbutton {
                    width: 100px;
                }
            </style>
            <a href="#" onclick="ConfirmDialog();return false;" class="easyui-linkbutton" icon="icon-ok">Ok</a>
